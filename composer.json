{
    "name": "arachne/forms",
    "description": "Integration of symfony/form to Nette framework.",
    "type": "library",
    "keywords": [ "symfony", "forms", "nette", "arachne" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^5.6.0|^7.0.0",
        "arachne/service-collections": "^0.1.0",
        "nette/application": "^2.4.0",
        "nette/di": "^2.4.10",
        "symfony/form": "^3.2.0"
    },
    "suggest": {
        "arachne/csrf": "Adds CSRF protection to forms.",
        "arachne/twig": "Enables forms rendering using Twig templates.",
        "arachne/upload": "Adds upload capability using nette/http.",
        "kdyby/validator": "Enables forms validation using symfony/form."
    },
    "require-dev": {
        "arachne/codeception": "^0.7.3",
        "arachne/csrf": "^0.2.0",
        "arachne/property-access": "^0.2.0",
        "arachne/twig": "^0.2.0|^0.3.0",
        "codeception/codeception": "^2.3.2",
        "kdyby/annotations": "^2.2.0",
        "kdyby/doctrine-cache": "^2.6.1@dev",
        "kdyby/translation": "^2.3.0",
        "kdyby/validator": "^0.4.0",
        "latte/latte": "^2.4.0",
        "nette/http": "^2.4.0",
        "symfony/security-csrf": "^3.2.0",
        "symfony/twig-bridge": "^3.2.1",
        "tracy/tracy": "^2.4.0"
    },
    "autoload": {
        "psr-4": {
            "Arachne\\Forms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Integration\\": "tests/integration/src",
            "Tests\\Functional\\": "tests/functional/src"
        },
        "files": [
            "vendor/codeception/codeception/shim.php"
        ]
    },
    "scripts": {
        "tools": "sh composer-tools.sh",
        "ci": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "fix": "\"vendor-tools/bin/php-cs-fixer\" fix",
        "analyse": "\"vendor-tools/bin/phpstan\" analyse --no-progress --level=7 --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run --debug"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.4-dev"
        }
    }
}
